        <menuitem id="menu_pos_mp_config" parent="point_of_sale.menu_point_config_product" name='MP QR' groups="base.group_no_one" sequence="35"/>
        <menuitem parent="pos_mercadopago_qr.menu_pos_mp_config" action="pos_mercadopago_qr.action_configuration_mp_form" id="menu_pos_pos_mp_config" groups="base.group_no_one" sequence="36"/>
    </data>
</odoo>

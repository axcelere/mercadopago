<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_pos_mp_configuration_form" model="ir.ui.view" >
            <field name="name">Payway Configurations</field>
            <field name="model">pos_mp.configuration.qr</field>
            <field name="arch" type="xml">
                <form string="Card Reader">
                    <sheet>
                        <div class="oe_title">
                           <label for="name"/>
                           <h1><field name="name"/></h1>
                        </div>
                        <group col="2">
                            <field name="mp_qr_url"/>
                            <field name="user_id"/>
                            <field name="mp_access_token"/>
                            <field name="company_id" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_pos_mp_configuration_tree" model="ir.ui.view">
            <field name="name">Payway Configurations</field>
            <field name="model">pos_mp.configuration.qr</field>
            <field name="arch" type="xml">
                <tree string="Card Reader">
                    <field name="name"/>
                    <field name="company_id" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="action_configuration_mp_form" model="ir.actions.act_window">
            <field name="name">MP Configuracion</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pos_mp.configuration.qr</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>

        <record id="pos_payment_method_mp_view_form" model="ir.ui.view">
            <field name="name">Payment Method</field>
            <field name="model">pos.payment.method</field>
            <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"></field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='use_payment_terminal']" position="after">
                    <field name="pos_mp_qr_config_id" attrs="{'invisible': [('use_payment_terminal', '!=', 'mp_qr')], 'required': [('use_payment_terminal', '=', 'mp_qr')]}"/>
                    <field name="mp_qr_test_mode" attrs="{'invisible': [('use_payment_terminal', '!=', 'mp_qr')], 'required': [('use_payment_terminal', '=', 'mp_qr')]}"/>
                </xpath>
            </field>
        </record>


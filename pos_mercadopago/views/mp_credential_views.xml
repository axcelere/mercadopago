<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_mp_credential_form" model="ir.ui.view" >
            <field name="name">Credenciales</field>
            <field name="model">mp.credential</field>
            <field name="arch" type="xml">
                <form string="Credenciales">
                    <sheet>
                        <div class="oe_title">
                           <label for="name"/>
                           <h1><field name="name"/></h1>
                        </div>
                        <group col="2">
                            <field name="mp_url"/>
                            <field name="user_id"/>
                            <field name="mp_access_token"/>
                            <field name="payment_type"/>
                            <field name="company_id" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_mp_credential_tree" model="ir.ui.view">
            <field name="name">Credenciales</field>
            <field name="model">mp.credential</field>
            <field name="arch" type="xml">
                <tree string="Card Reader">
                    <field name="name"/>
                    <field name="company_id" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="action_mp_credential_form" model="ir.actions.act_window">
            <field name="name">Credenciales</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mp.credential</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>

        <menuitem id="menu_mp_credential_config" parent="point_of_sale.menu_point_config_product" name='MP' groups="base.group_no_one" sequence="35"/>
        <menuitem parent="pos_mercadopago.menu_mp_credential_config" action="pos_mercadopago.action_mp_credential_form" id="menu_mp_credential" groups="base.group_no_one" sequence="36"/>
    </data>
</odoo>

<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_pos_mp_logs_form" model="ir.ui.view" >
            <field name="name">Logs</field>
            <field name="model">mp.log</field>
            <field name="arch" type="xml">
                <form string="Logs" create="0" delete="0">
                    <sheet>
                        <div class="oe_title">
                           <label for="config_id"/>
                           <h1><field name="config_id" readonly="1"/></h1>
                        </div>
                        <group col="4">
                            <field name="action" readonly="1"/>
                            <field name="status_code" readonly="1"/>
                            <field name="create_date" readonly="1"/>
                            <field name="header" readonly="1"/>
                            <field name="endpoint" readonly="1"/>
                            <field name="request" readonly="1"/>
                            <field name="response" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_pos_mp_logs_tree" model="ir.ui.view">
            <field name="name">Logs</field>
            <field name="model">mp.log</field>
            <field name="arch" type="xml">
                <tree string="Caja" create="0" delete="0">
                    <field name="config_id"/>
                    <field name="action"/>
                    <field name="status_code"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <record id="action_pos_mp_logs" model="ir.actions.act_window">
            <field name="name">Logs</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mp.log</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem parent="pos_mercadopago.menu_mp_credential_config" action="pos_mercadopago.action_pos_mp_logs" id="menu_pos_mp_logs" groups="base.group_no_one" sequence="37"/>
    </data>
</odoo>

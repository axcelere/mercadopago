<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_pos_mp_terminal_form" model="ir.ui.view" >
            <field name="name">MP terminal</field>
            <field name="model">pos.store.terminal.mp</field>
            <field name="arch" type="xml">
                <form string="Terminal">
                    <sheet>
                        <group col="2">
                            <field name="store_id" required="1"/>
                            <field name="config_id" required="1"/>
                            <field name="pos_mp_id" required="1"/>
                        </group>
                        <notebook>
                            <page string="Terminales">
                                <button name="get_terminal" string="Sincronizar terminal" type="object" class="oe_highlight" context="{'update_history': True}"/>
                                <br/>
                                <field name="terminal_line_ids" widget="one2many" colspan="4" nolabel="1" mode="tree" readonly="1">
                                        <tree>
                                            <field name="external_pos_id"/>
                                            <field name="mp_terminal_id"/>
                                            <field name="mp_pos_id"/>
                                            <field name="mp_terminal_number"/>
                                            <field name="mp_operating_mode"/>
                                            <field name="store_terminal_id"/>
                                        </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_pos_payway_terminal_tree" model="ir.ui.view">
            <field name="name">Payway terminal</field>
            <field name="model">pos.store.terminal.mp</field>
            <field name="arch" type="xml">
                <tree string="Terminal">
                    <field name="store_id"/>
                </tree>
            </field>
        </record>

        <record id="action_terminal_mp_configuration" model="ir.actions.act_window">
            <field name="name">MP terminal</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pos.store.terminal.mp</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem parent="point_of_sale.menu_point_config_product" action="pos_mercado_point.action_terminal_mp_configuration" id="menu_action_terminal_mp_configuration" groups="base.group_no_one" sequence="38"/>
    </data>
</odoo>

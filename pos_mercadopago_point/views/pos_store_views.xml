<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_pos_mp_store_form" model="ir.ui.view" >
            <field name="name">MP store</field>
            <field name="model">pos.store.mp</field>
            <field name="arch" type="xml">
                <form string="Store">
                    <sheet>
                        <div class="oe_title">
                           <label for="name"/>
                           <h1><field name="name"/></h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_pos_mp_store_tree" model="ir.ui.view">
            <field name="name">MP store</field>
            <field name="model">pos.store.mp</field>
            <field name="arch" type="xml">
                <tree string="Store">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_store_mp" model="ir.actions.act_window">
            <field name="name">MP store</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pos.store.mp</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>

        <menuitem parent="point_of_sale.menu_point_config_product" action="pos_mercado_point.action_store_mp" id="menu_pos_store_mp_config" groups="base.group_no_one" sequence="36"/>
    </data>
</odoo>
